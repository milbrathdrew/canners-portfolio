# Cloudflare Pages Headers Configuration
# Optimizes caching and performance for the portfolio

# Cache static assets for a long time
/css/*
  Cache-Control: max-age=31536000, immutable

/js/*
  Cache-Control: max-age=31536000, immutable

/images/*
  Cache-Control: max-age=31536000, immutable

# Font files - CORS and caching headers for custom domain compatibility
/fonts/*
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET
  Access-Control-Allow-Headers: *
  Cache-Control: max-age=31536000, immutable

# Specific font file types with correct MIME types
/fonts/*.woff2
  Content-Type: font/woff2
  Access-Control-Allow-Origin: *
  Cache-Control: max-age=31536000, immutable

/fonts/*.woff
  Content-Type: font/woff
  Access-Control-Allow-Origin: *
  Cache-Control: max-age=31536000, immutable

/fonts/*.ttf
  Content-Type: font/ttf
  Access-Control-Allow-Origin: *
  Cache-Control: max-age=31536000, immutable

/fonts/*.otf
  Content-Type: font/otf
  Access-Control-Allow-Origin: *
  Cache-Control: max-age=31536000, immutable

# Cache HTML files for a shorter time to allow updates
/*.html
  Cache-Control: max-age=3600

# Cache portfolio.json for a short time
/data/portfolio.json
  Cache-Control: max-age=300

# Security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

# Enable compression
/*
  Content-Encoding: gzip